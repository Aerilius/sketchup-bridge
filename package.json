{
  "name": "sketchup-bridge",
  "version": "3.0.6",
  "description": "A bidirectional communication system between WebDialogs and the SketchUp Ruby environment",
  "author": "Aerilius",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/Aerilius/sketchup-bridge.git"
  },
  "main": "dist/bridge.js",
  "scripts": {
    "build_all": "npm run build && npm run build_ruby",
    "build_only_library": "npm run build && bundle exec rake build_dist",
    "build": "cross-env NODE_ENV=production webpack --progress",
    "build_ruby": "bundle exec rake build_dist build_sample_extension build_tutorial",
    "dev": "cross-env NODE_ENV=development webpack --progress",
    "dev-server": "cross-env NODE_ENV=development webpack-dev-server --open --hot",
    "test": "mocha build/spec.bundle.js",
    "reformat": "prettier --write \"src/js/**/*.js\" \"src/spec/**/*.js\"",
    "lint": "eslint \"src/**/*.js\""
  },
  "files": [
    "dist/bridge.js"
  ],
  "dependencies": {
    "@babel/runtime": "^7.12.5",
    "core-js": "^3.7.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.7",
    "@babel/core": "^7.12.7",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.7",
    "babel-loader": "^8.2.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-spies": "^1.0.0",
    "chai-subset": "^1.6.0",
    "copy-webpack-plugin": "^6.3.2",
    "cross-env": "^7.0.2",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "mocha": "^8.2.1",
    "npm": "^6.14.9",
    "prettier": "^2.2.0",
    "stylelint": "^13.8.0",
    "stylelint-webpack-plugin": "^2.1.1",
    "terser-webpack-plugin": "^5.0.3",
    "webpack": "^5.6.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "targets": {
            "ie": "11",
            "chrome": "52"
          },
          "useBuiltIns": "usage",
          "corejs": "core-js@3"
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "es6": true,
      "browser": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "parser": "babel-eslint",
      "sourceType": "module"
    },
    "rules": {
      "no-console": 0,
      "no-empty": [
        "error",
        {
          "allowEmptyCatch": true
        }
      ],
      "no-extra-semi": 1,
      "no-unused-vars": 0,
      "no-var": 1,
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "never"
      ]
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "stylelint": {
    "rules": {
      "block-no-empty": null,
      "color-no-invalid-hex": true,
      "comment-empty-line-before": [
        "always",
        {
          "ignore": [
            "stylelint-commands",
            "after-comment"
          ]
        }
      ],
      "declaration-colon-space-after": "always",
      "indentation": [
        "tab",
        {
          "except": [
            "value"
          ]
        }
      ],
      "max-empty-lines": 2,
      "rule-empty-line-before": [
        "always",
        {
          "except": [
            "first-nested"
          ],
          "ignore": [
            "after-comment"
          ]
        }
      ],
      "unit-whitelist": [
        "em",
        "rem",
        "%",
        "s"
      ]
    }
  }
}
